<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.mihas.security</groupId>
    <artifactId>elytron-security-context-propagation-to-remote-ejb</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <modules>
        <module>docker</module>
        <module>code</module>
        <module>code/service-one-oidc-deployment</module>
        <module>code/service-one-keycloak-adapter-deployment</module>
        <module>code/service-two-oidc-deployment</module>
        <module>code/service-two-keycloak-adapter-deployment</module>
    </modules>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <skipTests>true</skipTests>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.wildfly.bom</groupId>
                <artifactId>wildfly-jakartaee8-with-tools</artifactId>
                <version>26.1.3.Final</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.mihas.security</groupId>
                <artifactId>api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.mihas.security</groupId>
                <artifactId>service-one</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.mihas.security</groupId>
                <artifactId>service-two</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.mihas.security</groupId>
                <artifactId>service-one</artifactId>
                <version>${project.version}</version>
                <type>war</type>
            </dependency>
            <dependency>
                <groupId>com.mihas.security</groupId>
                <artifactId>service-two</artifactId>
                <version>${project.version}</version>
                <type>war</type>
            </dependency>
            <dependency>
                <groupId>com.mihas.security</groupId>
                <artifactId>service-one-oidc-deployment</artifactId>
                <version>${project.version}</version>
                <type>war</type>
            </dependency>
            <dependency>
                <groupId>com.mihas.security</groupId>
                <artifactId>service-two-oidc-deployment</artifactId>
                <version>${project.version}</version>
                <type>war</type>
            </dependency>
            <dependency>
                <groupId>com.mihas.security</groupId>
                <artifactId>service-one-keycloak-adapter-deployment</artifactId>
                <version>${project.version}</version>
                <type>war</type>
            </dependency>
            <dependency>
                <groupId>com.mihas.security</groupId>
                <artifactId>service-two-keycloak-adapter-deployment</artifactId>
                <version>${project.version}</version>
                <type>war</type>
            </dependency>
        </dependencies>
    </dependencyManagement>


    <build>
        <plugins>
            <plugin>
                <groupId>org.wildfly.plugins</groupId>
                <artifactId>wildfly-maven-plugin</artifactId>
                <version>2.1.0.Beta1</version><configuration>
                <address>localhost</address>
                <port>9990</port>
                <username>admin</username>
                <password>admin</password>
                <skip>true</skip>
            </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.2.2</version>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>JBoss 3rd-party</id>
            <url>https://repository.jboss.org/nexus/content/repositories/thirdparty-releases</url>
        </repository>
    </repositories>

</project>
